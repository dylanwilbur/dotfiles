### kwm {{

# # Move windows
# shift + alt + cmd - up    : kwmc window -s north
# shift + alt + cmd - right : kwmc window -s east
# shift + alt + cmd - down  : kwmc window -s south
# shift + alt + cmd - left  : kwmc window -s west

# # Focus windows
# ctrl + cmd - up    : kwmc window -f north
# ctrl + cmd - right : kwmc window -f east
# ctrl + cmd - down  : kwmc window -f south
# ctrl + cmd - left  : kwmc window -f west

# # Rotate windows
# ctrl + cmd - r         : kwmc tree rotate 270
# ctrl + cmd + shift - r : kwmc tree rotate 90

# # Change split-ratio
# ctrl + alt - up    : kwmc window -c expand 0.05 north && kwmc window -c reduce 0.05 south
# ctrl + alt - right : kwmc window -c expand 0.05 east  && kwmc window -c reduce 0.05 west
# ctrl + alt - down  : kwmc window -c expand 0.05 south && kwmc window -c reduce 0.05 north
# ctrl + alt - left  : kwmc window -c expand 0.05 west  && kwmc window -c reduce 0.05 east

### }}

### chunkwm {{

# Open terminal (kitty)
alt + cmd - t : open -na /Applications/Kitty.app

# Move windows
alt + cmd - up    : chunkc tiling::window --warp north
alt + cmd - right : chunkc tiling::window --warp east
alt + cmd - down  : chunkc tiling::window --warp south
alt + cmd - left  : chunkc tiling::window --warp west

# Focus windows
ctrl + cmd - up    : chunkc tiling::window --focus north
ctrl + cmd - right : chunkc tiling::window --focus east
ctrl + cmd - down  : chunkc tiling::window --focus south
ctrl + cmd - left  : chunkc tiling::window --focus west

# Rotate windows
ctrl + cmd - r         : chunkc tiling::desktop --rotate 270
ctrl + cmd + shift - r : chunkc tiling::desktop --rotate 90

# Change split-ratio
alt + ctrl - up    : chunkc tiling::window -r 0.05 -e north tiling::window -r -0.05 -e south
alt + ctrl - right : chunkc tiling::window -r 0.05 -e east  tiling::window -r -0.05 -e west
alt + ctrl - down  : chunkc tiling::window -r 0.05 -e south tiling::window -r -0.05 -e north
alt + ctrl - left  : chunkc tiling::window -r 0.05 -e west  tiling::window -r -0.05 -e east

# Fullscreen
shift + ctrl - f : chunkc tiling::desktop --toggle offset

# Change padding
alt + ctrl + shift - down : chunkc tiling::desktop --padding inc
alt + ctrl + shift - up   : chunkc tiling::desktop --padding dec

# Send window to desktop
ctrl + shift - right : chunkc tiling::window --send-to-desktop next
ctrl + shift - left  : chunkc tiling::window --send-to-desktop prev

# alt - h : ~/code/c/projects/move-mouse/move-mouse -m -20 0
# alt - j : ~/code/c/projects/move-mouse/move-mouse -m 0 -20
# alt - k : ~/code/c/projects/move-mouse/move-mouse -m 0 20
# alt - l : ~/code/c/projects/move-mouse/move-mouse -m 20 0

### }}
