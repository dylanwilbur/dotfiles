### chunkwm {{

# Open terminal (kitty)
alt + cmd - space : /Applications/kitty.app/Contents/MacOS/kitty --session ~/dotfiles/kitty/default-session
alt - space : open -na /Applications/Alacritty.app/

# Move windows
alt + cmd - up    : chunkc tiling::window --warp north
alt + cmd - right : chunkc tiling::window --warp east
alt + cmd - down  : chunkc tiling::window --warp south
alt + cmd - left  : chunkc tiling::window --warp west

# Focus windows
ctrl + cmd - up    : chunkc tiling::window --focus north
ctrl + cmd - right : chunkc tiling::window --focus east
ctrl + cmd - down  : chunkc tiling::window --focus south
ctrl + cmd - left  : chunkc tiling::window --focus west

# Focus monitors
ctrl + cmd + shift - left  : chunkc tiling::monitor -f prev
ctrl + cmd + shift - right : chunkc tiling::monitor -f next

# Rotate windows
ctrl + cmd - r         : chunkc tiling::desktop --rotate 270
ctrl + cmd + shift - r : chunkc tiling::desktop --rotate 90

# Change split-ratio
alt + ctrl - up    : chunkc tiling::window -r 0.05 -e north tiling::window -r -0.05 -e south
alt + ctrl - right : chunkc tiling::window -r 0.05 -e east  tiling::window -r -0.05 -e west
alt + ctrl - down  : chunkc tiling::window -r 0.05 -e south tiling::window -r -0.05 -e north
alt + ctrl - left  : chunkc tiling::window -r 0.05 -e west  tiling::window -r -0.05 -e east

# Fullscreen
shift + ctrl - f : chunkc tiling::desktop --toggle offset

# Change padding
alt + ctrl + shift - down : chunkc tiling::desktop --padding inc
alt + ctrl + shift - up   : chunkc tiling::desktop --padding dec

# Change gap
alt + ctrl + shift - left  : chunkc tiling::desktop --gap dec
alt + ctrl + shift - right : chunkc tiling::desktop --gap inc

# Equalize windows
cmd - 0x18 : chunkc tiling::desktop --equalize

# Insertion points
ctrl + alt + cmd - up    : chunkc tiling::window --use-insertion-point north
ctrl + alt + cmd - right : chunkc tiling::window --use-insertion-point east
ctrl + alt + cmd - down  : chunkc tiling::window --use-insertion-point south
ctrl + alt + cmd - left  : chunkc tiling::window --use-insertion-point west

# Send window to desktop
ctrl + shift - right : chunkc tiling::window --send-to-desktop next && khd -p "ctrl - right"
ctrl + shift - left  : chunkc tiling::window --send-to-desktop prev && khd -p "ctrl - left"

# alt - h : ~/scripts/move-mouse -m -20 0
# alt - j : ~/scripts/move-mouse -m 0 -20
# alt - k : ~/scripts/move-mouse -m 0 20
# alt - l : ~/scripts/move-mouse -m 20 0

### }}
